<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>nerdbook.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Bacheca</servlet-name>
        <servlet-class>nerdbook.Bacheca</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Profilo</servlet-name>
        <servlet-class>nerdbook.Profilo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Iscrizione</servlet-name>
        <servlet-class>nerdbook.Iscrizione</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NuovoPost</servlet-name>
        <servlet-class>nerdbook.NuovoPost</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Ricerca</servlet-name>
        <servlet-class>nerdbook.Ricerca</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Filter</servlet-name>
        <servlet-class>nerdbook.Filter</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Iscrizione</servlet-name>
        <url-pattern>/Iscrizione</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Bacheca</servlet-name>
        <url-pattern>/Bacheca.jsp</url-pattern>
        <url-pattern>/Bacheca</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Profilo</servlet-name>
        <url-pattern>/Profilo.jsp</url-pattern>
        <url-pattern>/Profilo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NuovoPost</servlet-name>
        <url-pattern>/NuovoPost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Ricerca</servlet-name>
        <url-pattern>/Ricerca</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Filter</servlet-name>
        <url-pattern>/Filter</url-pattern>
        <url-pattern>/filter.json</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>descrizione.jsp</welcome-file>
    </welcome-file-list>
</web-app>
